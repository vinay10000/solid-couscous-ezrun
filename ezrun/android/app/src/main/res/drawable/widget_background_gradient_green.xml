<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_radius" />
            <gradient
                android:angle="135"
                android:endColor="@color/widget_green_end"
                android:startColor="@color/widget_green_start" />
            <stroke
                android:width="1dp"
                android:color="@color/widget_glass_border" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/widget_radius" />
            <gradient
                android:angle="225"
                android:endColor="@color/widget_glass_end"
                android:startColor="@color/widget_glass_start" />
        </shape>
    </item>
</layer-list>
